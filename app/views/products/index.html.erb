<p id="notice"><%= notice %></p>

<div class="container row">
  <h1>Featured Prints</h1>
  <button class="btn" id="new-button"><%= link_to 'Add New Product', new_product_path %></button>
</div>

<div class="container row">
  <% @products.each do |product| %>
    <div class="product-item col-xs-6 col-sm-4 col-md-3">
      <h3><%= product.name %></h3>
      <img class="img-responsive" src="<%= product.image_url %>">
      <p><%= product.description %></p>
      <button class="btn btn-default"><%= link_to 'Show', product %></button>
      <button class="btn btn-default"><%= link_to 'Edit', edit_product_path(product) %></button>
      <button class="btn btn-default"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
    </div>
  <% end %>
</div>
